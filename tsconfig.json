{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES2016"],
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@constants/*": ["constants/*"],
      "@tic/*": ["../tic/*"],
      "@ecs/*": ["ecs/*"],
      "@interfaces/*": ["interfaces/*"]


    }
  },
  "include": ["./tic","src/**/*"]
}
